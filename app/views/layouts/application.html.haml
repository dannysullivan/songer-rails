!!! html
%html
  %head
    %title SongerRails
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body(ng-app="songer")
    %nav.navbar.navbar-default
      .container
        .navbar-header
          = link_to "Songer", root_path, class: "navbar-brand"
        .navbar
    .container
      - if flash[:notice]
        .alert.alert-success.text-center= flash[:notice]
    = yield
